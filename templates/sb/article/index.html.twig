{% extends 'sb/layout.html.twig' %}

{% block title %}文章列表{% endblock %}
{% block nav_name %}文章列表{% endblock %}
{% block main %}
    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
        <tr>
            <th>文章ID</th>
            <th>标题</th>
            <th>所属栏目</th>
            <th>是否公开</th>
            <th>公开时间</th>
            <th>创建时间</th>
            <th>更新时间</th>
            <th>操作</th>
        </tr>
        </thead>
        <tbody>
        {% for article in articles %}
        <tr class="odd gradeX">
            <tr>
                <td>{{ article.id }}</td>
            <td>{{ article.title }}</td>
            <td>
                {% for category in article.categories %}
                <a href="#"><span>{{ category.name ?? '' }}</span></a>
                {% endfor %}

            </td>
                <td>{{ article.isShow ? 'Yes' : 'No' }}</td>
                 <td>{{ article.pulicAt ? article.pulicAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ article.updatedAt ? article.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('article.show', {'id': article.id}) }}">查看</a>
                    <a href="{{ path('article.edit', {'id': article.id}) }}">编辑</a>
                </td>
            </tr>
        </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
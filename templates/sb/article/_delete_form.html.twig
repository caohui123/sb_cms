<form method="post" action="{{ path('sb.article.delete', {'id': article.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
    <div class="form-group">
        <button id="article_save" name="article[save]" class="btn btn-danger">删除</button>
    </div>
</form>
